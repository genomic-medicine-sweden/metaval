/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run genomic-medicine-sweden/metaval -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
}

params {
    config_profile_name           = 'Test profile'
    config_profile_description    = 'Minimal test dataset to check pipeline function'

    // Input data
    input                         = params.pipelines_testdata_base_path + 'samplesheet.csv'
    pathogens_genomes             = params.pipelines_testdata_base_path + 'reference/reference.fasta'
    accession2taxid               = params.pipelines_testdata_base_path + 'reference/accession2taxid.map'

    // Extract reads
    perform_extract_reads         = true
    extract_kraken2_reads         = true
    fastq_output                  = true
    extract_centrifuge_reads      = true
    extract_diamond_reads         = false

    // de novo
    perform_shortread_denovo      = true
    perform_longread_denovo       = true
    min_read_counts               = 18

    // Screen pathogens
    perform_screen_pathogens      = true
    perform_longread_consensus    = true
    perform_shortread_consensus   = true
    longread_consensus_tool       = 'samtools'

    // Genome references
    genome = 'R64-1-1'
}
